rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Solo admins autenticados pueden leer/escribir reportes
    match /reports/{reportId} {
      allow read: if request.auth != null && 
                     get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Permitir creación pública de reportes (con rate limiting)
    match /reports/{reportId} {
      allow create: if request.resource.data.keys().hasAll(['cedula', 'description', 'evidence']) &&
                       request.resource.data.cedula.matches('^[VE][0-9]{6,8}$');
    }
  }
}